{
  "name": "@everymundo/simple-logr",
  "version": "1.1.1",
  "description": "A very simplistic logger that allows one to avoid using the console.log directly allowing stubbing and better linting.",
  "main": "index.js",
  "scripts": {
    "cover": "LOG_LEVEL=trace nyc -x spec --reporter=lcov --reporter=text mocha spec --recursive",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "check-lint": "eslint *.js lib/*.js test/*.js",
    "fix-lint": "eslint --fix *.js lib/*.js test/*.js",
    "test": "LOG_LEVEL=trace mocha spec --recursive $@",
    "test-watch": "LOG_LEVEL=trace mocha spec --recursive -w"
  },
  "config": {
    "ghooks": {
      "pre-push": "npm run check-lint && npm run cover && npm run check-coverage"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EveryMundo/simple-logr.git"
  },
  "keywords": [
    "nodejs",
    "logger"
  ],
  "author": "Daniel Santana",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EveryMundo/simple-logr/issues"
  },
  "homepage": "https://github.com/EveryMundo/simple-logr#readme",
  "devDependencies": {
    "@everymundo/cleanrequire": "^1.2.0",
    "chai": "^4.2.0",
    "eslint": "^5.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "ghooks": "^2.0.4",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "sinon": "^7.2.7"
  }
}
