{
  "name": "@everymundo/simple-logr",
  "version": "3.0.3",
  "description": "A very simplistic logger that allows one to avoid using the console.log directly allowing stubbing and better linting.",
  "main": "index.js",
  "module": "index.mjs",
  "scripts": {
    "cover": "LOG_LEVEL=silent nyc -x test --reporter=lcov --reporter=text mocha test --recursive",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "check-lint": "standard *js  *mjs  *cjs test/*js",
    "fix-lint": "standard --fix *js  *mjs  *cjs test/*js",
    "test": "LOG_LEVEL=silent mocha --recursive $@",
    "test-watch": "LOG_LEVEL=silent mocha --recursive -w"
  },
  "config": {
    "ghooks": {
      "pre-push": "npm run check-lint && npm run cover && npm run check-coverage"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EveryMundo/simple-logr.git"
  },
  "keywords": [
    "nodejs",
    "logger"
  ],
  "author": "Daniel Santana",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EveryMundo/simple-logr/issues"
  },
  "homepage": "https://github.com/EveryMundo/simple-logr#readme",
  "devDependencies": {
    "@everymundo/cleanrequire": "^1.2.4",
    "@std/esm": "^0.26.0",
    "c8": "^7.13.0",
    "chai": "^4.3.7",
    "coverage-node": "^8.0.0",
    "esm": "^3.2.25",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sinon": "^15.0.4",
    "standard": "^17.0.0"
  },
  "dependencies": {
    "flatstr": "^1.0.12",
    "pino": "^8"
  }
}
